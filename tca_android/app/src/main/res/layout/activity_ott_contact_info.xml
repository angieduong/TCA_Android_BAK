<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:id="@+id/iv_go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_tca_back"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/one_time_toll"
                android:textSize="@dimen/title_text_size"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_go_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="16dp"
                android:layout_centerVertical="true"
                android:text="@string/next"
                android:textSize="@dimen/title_text_size"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="always"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="@string/ott_contact_info_hint2"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/white_background_grey_round_frame_bg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        >

                        <TextView
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/first"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <EditText
                            android:id="@+id/et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="86dp"
                            android:padding="10dp"
                            android:inputType="text"
                            android:text=""
                            android:hint="@string/first_name_hint"
                            android:textColorHint="@color/colorBgGray"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBgGray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        >

                        <TextView
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/last"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <EditText
                            android:id="@+id/et_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="86dp"
                            android:padding="10dp"
                            android:inputType="text"
                            android:text=""
                            android:hint="@string/last_name_hint"
                            android:textColorHint="@color/colorBgGray"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBgGray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/address"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="86dp"
                            android:padding="10dp"
                            android:inputType="text"
                            android:text=""
                            android:hint="@string/address_hint"
                            android:textColorHint="@color/colorBgGray"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBgGray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/city"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="86dp"
                            android:padding="10dp"
                            android:inputType="text"
                            android:text=""
                            android:hint="@string/city"
                            android:textColorHint="@color/colorBgGray"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBgGray"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_state"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        >

                        <TextView
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/state"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <Spinner
                            android:id="@+id/state_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="86dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_centerVertical="true"
                            android:entries="@array/united_states_arrays"
                            android:background="@null"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_tca_down"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBgGray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/zip_code"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <EditText
                            android:id="@+id/et_zip_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="86dp"
                            android:padding="10dp"
                            android:inputType="text"
                            android:text=""
                            android:hint="@string/zip_code"
                            android:textColorHint="@color/colorBgGray"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBgGray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        >

                        <TextView
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/country"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <Spinner
                            android:id="@+id/country_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="86dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_centerVertical="true"
                            android:entries="@array/country_arrays"
                            android:background="@null"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_tca_down"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/white_background_grey_round_frame_bg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/email"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="122dp"
                            android:padding="10dp"
                            android:inputType="textEmailAddress"
                            android:text=""
                            android:hint="@string/email_hint"
                            android:textColorHint="@color/colorBgGray"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBgGray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="112dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/re_type_email"
                            android:textSize="16sp"
                            android:textColor="@color/colorGray"
                            />

                        <EditText
                            android:id="@+id/et_re_type_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="122dp"
                            android:padding="10dp"
                            android:inputType="textEmailAddress"
                            android:text=""
                            android:hint="@string/email_hint"
                            android:textColorHint="@color/colorBgGray"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/tv_total_charge"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text=""
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:background="@color/colorPrimary"
            android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_datePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:background="#7f000000"
        android:visibility="gone"
            >
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePicker"
            android:background="@android:color/white"
            >
            <TextView
                android:id="@+id/tv_datePicker_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_datePicker_ok"
                android:padding="16dp"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_datePicker_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="16dp"
                android:text="@string/ok"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>