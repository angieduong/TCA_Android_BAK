<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:src="@drawable/ic_tca_back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pay_violation"
            android:textSize="@dimen/title_text_size"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/pay"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="always"
        android:fadeScrollbars="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="@string/violation_summary_hint"
                android:textSize="15sp"
                android:textColor="@color/colorGray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_background_grey_frame_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/contact_information"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="@color/colorDarkGray"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="@dimen/violation_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/name"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="139dp"
                        android:text="John Smith"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="@dimen/violation_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/phone"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="139dp"
                        android:text="1234567890"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="@dimen/violation_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/email"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="139dp"
                        android:text="name@example.com"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_background_grey_frame_bg">
                <TextView
                    android:id="@+id/tv_payment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/card_information"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="@color/colorDarkGray"
                    />

                <LinearLayout
                    android:id="@+id/ll_credit_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/card_number"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
    
                        <TextView
                            android:id="@+id/tv_card_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text="**********5678"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/cvv"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
    
                        <TextView
                            android:id="@+id/tv_cvv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text="0621"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/name"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
    
                        <TextView
                            android:id="@+id/tv_name_on_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text="John Doe"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/expiry"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
    
                        <TextView
                            android:id="@+id/tv_exp_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text="11/16"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/zip_code"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
                        <TextView
                            android:id="@+id/tv_zip_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text="92616"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_echeck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/routing_no"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_routing_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/account_no"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_account_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/first_name"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="@dimen/violation_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/last_name"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="139dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_google_pay"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@color/colorBgGrayLight">

                    <RelativeLayout
                        android:layout_width="@dimen/violation_select_payment_icon_width"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_google_pay"/>

                    </RelativeLayout>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="@string/google_pay"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_select_violation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textSize="18dp"
                android:textColor="@android:color/black"
                />

            <ListView
                android:id="@+id/lv_violation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:divider="@android:color/transparent"
                android:dividerHeight="10dp"
                />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/toll_roads_center"
        android:textSize="15sp"
        android:textColor="@color/colorBgGray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/toll_roads_address"
        android:textSize="15sp"
        android:textColor="@color/colorBgGray"
        />

    <TextView
        android:id="@+id/tv_total_charge"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:text=""
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:background="@color/colorPrimary"
        />
</LinearLayout>