<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:src="@drawable/ic_tca_back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/payments"
            android:textSize="@dimen/title_text_size"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/colorGray"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center"
                android:text="@string/recent_payments"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                />

            <ListView
                android:id="@+id/lv_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:divider="@android:color/transparent"
                android:dividerHeight="10dp"
                android:background="@android:color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_make_a_payment"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/make_a_payment"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/payment_method"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_make_payment_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/rl_make_payment_popup_cancel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:background="@android:color/black">

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/enter_amount_wish_to_pay"
                    android:textColor="@color/colorDarkGray"
                    android:layout_gravity="center_horizontal"/>

                <RelativeLayout
                    android:id="@+id/rl_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/white_background_grey_round_frame_bg"
                    >

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="@string/amount"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />
                    <TextView
                        android:id="@+id/tv_dollar_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="106dp"
                        android:text="@string/dollar_sign"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_dollar_sign"
                        android:textColor="@android:color/transparent"
                        android:maxLength="8"
                        android:padding="10dp"
                        android:inputType="number"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_dollar_sign"
                        android:padding="10dp"

                        android:text = "0.00"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_make_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="@string/make_payment"
                    android:textSize="18sp"
                    android:background="@color/colorPrimary"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_select_payment_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="@string/violation_select_payment_hint"
                android:textSize="16sp"
                android:textColor="@color/colorGray"/>
            <LinearLayout
                android:id="@+id/ll_credit_card"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@color/colorBgGrayLight">

                <RelativeLayout
                    android:layout_width="@dimen/violation_select_payment_icon_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tca_payment"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/credit_card"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tca_next_yellow"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_electronic_check"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@color/colorBgGrayLight">

                <RelativeLayout
                    android:layout_width="@dimen/violation_select_payment_icon_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tca_echeck"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/electronic_check"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tca_next_yellow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_google_pay"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/colorBgGrayLight">

                <RelativeLayout
                    android:layout_width="@dimen/violation_select_payment_icon_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_google_pay"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/google_pay"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tca_next_yellow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_samsung_pay"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/colorBgGrayLight">

                <RelativeLayout
                    android:layout_width="@dimen/violation_select_payment_icon_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_samsung_pay"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/samsung_pay"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tca_next_yellow"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>