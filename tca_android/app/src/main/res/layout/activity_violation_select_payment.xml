<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.seta.tollroaddroid.app.ViolationSelectPaymentActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_tca_back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pay_violation"
            android:textSize="@dimen/title_text_size"
            android:textColor="@android:color/black"/>


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/violation_select_payment_hint"
        android:textSize="16sp"
        android:textColor="@color/colorGray"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="always"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll_credit_card"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@color/colorBgGrayLight">

                <RelativeLayout
                    android:layout_width="@dimen/violation_select_payment_icon_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tca_payment"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/credit_card"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tca_next_yellow"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_electronic_check"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:background="@color/colorBgGrayLight">

                <RelativeLayout
                    android:layout_width="@dimen/violation_select_payment_icon_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tca_echeck"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/electronic_check"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tca_next_yellow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_google_pay"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/colorBgGrayLight">

                <RelativeLayout
                    android:layout_width="@dimen/violation_select_payment_icon_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_google_pay"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/google_pay"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tca_next_yellow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_samsung_pay"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/colorBgGrayLight">

                <RelativeLayout
                    android:layout_width="@dimen/violation_select_payment_icon_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_samsung_pay"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/samsung_pay"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tca_next_yellow"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_total_charge"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:text=""
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:background="@color/colorPrimary"
        />
</LinearLayout>
