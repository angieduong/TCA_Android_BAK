<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background_grey_frame_bg2">
    <TextView
        android:id="@+id/tv_trip_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:text="@string/trip_index"
        android:textSize="18sp"
        android:textColor="@color/colorGray"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="@dimen/ott_summary_caption_width"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/date"
            android:textSize="15sp"
            android:textColor="@color/colorGray"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="03/16/2016"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:layout_width="@dimen/ott_summary_caption_width"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/road"
            android:textSize="15sp"
            android:textColor="@color/colorGray"
            />

        <TextView
            android:id="@+id/tv_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="State Route"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:layout_width="@dimen/ott_summary_caption_width"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/start"
            android:textSize="15sp"
            android:textColor="@color/colorGray"
            />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="Start Point"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:layout_width="@dimen/ott_summary_caption_width"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/end"
            android:textSize="15sp"
            android:textColor="@color/colorGray"
            />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="End Point"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBgGray" />
    <TextView
        android:id="@+id/tv_trip_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textSize="15sp"
        android:textColor="@android:color/black"
        />
</LinearLayout>