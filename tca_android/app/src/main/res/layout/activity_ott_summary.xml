<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:src="@drawable/ic_tca_back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/one_time_toll"
            android:textSize="@dimen/title_text_size"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/one_time_toll"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="always"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="@string/ott_summary_hint"
                android:textSize="15sp"
                android:textColor="@color/colorGray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_background_grey_frame_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/vehicle"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="@color/colorDarkGray"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="@dimen/ott_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/license_plate"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_license_plate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="GFHD103"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="@dimen/ott_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/country"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="United States"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="@dimen/ott_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/state"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="California"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_trailer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/trailer_license_plate"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_trailer_license_plate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text="GFHD103"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/trailer_country"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_trailer_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text="United States"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_trailer_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/trailer_state"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_trailer_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text="California"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_vehicle_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="@dimen/ott_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/vehicle_type"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_vehicle_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="2-axle"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorDarkGray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/save"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/save_for_auto_populate"
                        android:textColor="@color/colorGray"
                        android:textSize="15dp" />

                    <Switch
                        android:id="@+id/sw_auto_populate_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_trip_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/white_background_grey_frame_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/trip_details"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="@color/colorDarkGray"
                    />

                <ListView
                    android:id="@+id/lv_trip_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    android:background="@android:color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rental_trip_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_background_grey_frame_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/toll_dates"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="@color/colorDarkGray"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="@dimen/ott_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/start_date"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                         />

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="03/16/2016"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="@dimen/ott_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/end_date"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="03/16/2016"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_background_grey_frame_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/payment"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="@color/colorDarkGray"
                    />

                <TextView
                    android:id="@+id/tv_payment_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:id="@+id/ll_credit_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/card_number"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
    
                        <TextView
                            android:id="@+id/tv_card_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text="**********5678"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/cvv"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
    
                        <TextView
                            android:id="@+id/tv_cvv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text="0621"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/name_on_card"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
    
                        <TextView
                            android:id="@+id/tv_name_on_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text="John Doe"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/exp_date"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
    
                        <TextView
                            android:id="@+id/tv_exp_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text="11/16"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/billing_address"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_contact_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123 Street Ave"
                                android:textSize="15sp"
                                android:textColor="@android:color/black"
                                />
                            <TextView
                                android:id="@+id/tv_billing_city_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="San Jose, CA"
                                android:textSize="15sp"
                                android:textColor="@android:color/black"
                                />
                            <TextView
                                android:id="@+id/tv_billing_zip_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="90017"
                                android:textSize="15sp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_echeck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/routing_no"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_routing_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/account_no"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_account_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/first_name"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/last_name"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                </LinearLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    >
                    <TextView
                        android:layout_width="@dimen/ott_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/contact_name"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="John Smith"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="@dimen/ott_summary_caption_width"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/email_address"
                        android:textSize="15sp"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="name@example.com"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_save_credit_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorDarkGray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/save"
                        android:textColor="@android:color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="6dp"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/save_for_auto_populate"
                            android:textColor="@color/colorGray"
                            android:textSize="15dp" />

                        <Switch
                            android:id="@+id/sw_auto_populate_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_express_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorDarkGray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:text="@string/your_express_charge_account"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/phone_number"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="@dimen/ott_summary_caption_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/user_name_cap"
                            android:textSize="15sp"
                            android:textColor="@color/colorGray"
                            />

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="160dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tv_total_charge"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:text=""
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:background="@color/colorPrimary"/>
</LinearLayout>